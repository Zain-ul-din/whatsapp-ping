          <label class="flex flex-col mb-4">
            <span class="text-lg">API Key</span>
            <input
              type="text"
              placeholder="Enter your API key"
              class="mt-2 p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
